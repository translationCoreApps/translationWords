{
  "extends": ["eslint:recommended"],
  "rules": {
    "no-useless-escape": "warn",
    "no-constant-condition": "warn",
    "no-unused-vars": "warn",
    "semi": ["error", "always", {"omitLastInOneLineBlock": true}],
    "no-console": "off"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
